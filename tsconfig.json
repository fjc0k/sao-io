{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".",
    "newLine": "LF",
    "skipLibCheck": true,
    "lib": [
      "esnext",
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "sao.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/template",
    "src/scripts"
  ]
}
