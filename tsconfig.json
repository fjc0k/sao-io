{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".",
    "newLine": "LF",
    "skipLibCheck": true,
    "lib": [
      "esnext",
    ],
    "typeRoots": [
      "node_modules/@types",
      "sao.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/template",
    "scripts"
  ]
}
