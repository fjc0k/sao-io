{
  "name": "demo",
  "version": "0.0.0",
  "description": "demo",
  "author": "demo",
  "scripts": {
    "release": "standard-version --commit-all --no-verify && git push --follow-tags origin master"
  },
  "eslintConfig": {
    "root": true,
    "extends": "io"
  },
  "eslintIgnore": [
    "lib",
    "dist",
    "node_modules",
    "__snapshots__"
  ],
  "stylelint": {
    "extends": "stylelint-config-io"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix src",
      "stylelint --fix src",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "vtils": "^0.85.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/node": "^11.11.3",
    "eslint": "^5.15.0",
    "eslint-config-io": "^0.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "standard-version": "^4.4.0",
    "stylelint": "^9.10.1",
    "stylelint-config-io": "^0.1.0",
    "typescript": "^3.4.1"
  }
}
