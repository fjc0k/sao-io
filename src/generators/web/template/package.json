{
  "name": "demo",
  "version": "0.0.0",
  "description": "demo",
  "main": "index.js",
  "author": {
    "name": "demo",
    "email": "demo@demo.demo",
    "url": "https://demo.demo"
  },
  "private": true,
  "scripts": {
    "dev": "poi --serve --open",
    "build": "poi --prod",
    "lint:es": "eslint --fix src/",
    "lint:style": "stylelint --fix src/",
    "test": "jest",
    "test:cov": "jest --coverage",
    "release": "standard-version --commit-all --no-verify && git push --follow-tags origin master"
  },
  "browserslist": [
    "iOS > 7",
    "Android > 4"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-pxtorem": {
        "rootValue": 37.5,
        "propList": [
          "*"
        ],
        "mediaQuery": true
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "io"
  },
  "eslintIgnore": [
    "lib",
    "dist",
    "node_modules",
    "__snapshots__"
  ],
  "stylelint": {
    "extends": "stylelint-config-io"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts|tsx}"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "core-js": "^3.0.1",
    "mobx": "^4.9.4",
    "mobx-react": "^5.4.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-cache-route": "^1.4.2",
    "react-router-dom": "^5.0.0",
    "vtils": "^0.85.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/react-router-dom": "^4.3.1",
    "autoprefixer": "^9.5.0",
    "eslint": "^5.15.0",
    "eslint-config-io": "^0.5.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "poi": "^12.6.3",
    "postcss-pxtorem": "^4.0.1",
    "sass-loader": "^7.1.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.10.1",
    "stylelint-config-io": "^0.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  }
}
